# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Environment
ENV=development
DEBUG=true

# API Keys
RUNPOD_API_KEY=your_runpod_api_key_here
RUNPOD_ENDPOINT_ID=your_endpoint_id_here
JQUANTS_MAIL_ADDRESS=your_jquants_email@example.com
JQUANTS_PASSWORD=your_jquants_password_here
JQUANTS_REFRESH_TOKEN=your_refresh_token_here

# Docker
DOCKER_ID=your_docker_id
DOCKER_PASSWORD=your_docker_password

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/stock_analysis
REDIS_URL=redis://localhost:6379/0

# Model Configuration
MODEL_VERSION=latest
PRECISION_THRESHOLD=0.85
MAX_DAILY_PICKS=3
ENSEMBLE_WEIGHTS_LIGHTGBM=0.45
ENSEMBLE_WEIGHTS_CATBOOST=0.45
ENSEMBLE_WEIGHTS_LOGISTIC=0.10

# Data Settings
DATA_START_DATE=2016-01-01
DATA_END_DATE=2024-12-31
TRAIN_END_DATE=2022-12-30
VAL_END_DATE=2023-12-30
TEST_END_DATE=2024-12-31

# Feature Settings
MA_PERIODS=5,10,20,60,120
RSI_PERIOD=14
BB_PERIOD=20
BB_STD=2

# Training Settings
N_SPLITS=6
GAP_DAYS=5
RANDOM_STATE=42
N_JOBS=4
OPTUNA_TRIALS=200

# Execution Settings
DAILY_EXECUTION_TIME=16:00
TIMEZONE=Asia/Tokyo
MAX_RETRIES=3
TIMEOUT_SECONDS=1800

# Monitoring
ENABLE_MONITORING=true
ENABLE_ALERTS=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=noreply@example.com
EMAIL_TO=admin@example.com
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Storage
LOCAL_DATA_DIR=/data
BACKUP_DIR=/backup
S3_BUCKET=stock-analysis-backup
S3_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Logging
LOG_LEVEL=INFO
LOG_DIR=/logs
LOG_ROTATION=1 day
LOG_RETENTION=30 days
LOG_FORMAT=json

# Cache
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1GB

# Feature Flags
DRY_RUN=false
SKIP_DATA_VALIDATION=false
FORCE_RETRAIN=false
USE_CACHED_FEATURES=true
ENABLE_BACKTESTING=true

# Performance
CHUNK_SIZE=10000
BATCH_SIZE=1000
PARALLEL_WORKERS=4
MEMORY_LIMIT=14GB

# Security
API_RATE_LIMIT=100
API_RATE_LIMIT_PERIOD=60
ENABLE_SSL=true
SSL_CERT_PATH=/certs/cert.pem
SSL_KEY_PATH=/certs/key.pem

# Development
JUPYTER_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
JUPYTER_PORT=8888
TENSORBOARD_PORT=6006
MLFLOW_TRACKING_URI=http://localhost:5000
WANDB_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
WANDB_PROJECT=stock-analysis

# Testing
TEST_MODE=false
USE_SAMPLE_DATA=false
SAMPLE_DATA_SIZE=1000